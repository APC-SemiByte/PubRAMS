<body style="background-color: rgb(247, 247, 247);">

    <div class="ps-5 py-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Cataloging_Record">Cataloging (Add Record)</a></li>
                <li class="breadcrumb-item active" aria-current="page">Cataloging (Add Items)</li>
            </ol>
        </nav>
    </div>

    <h1 class="greeting" style="display: flex;
            color: rgb(0, 0, 0);
            margin-left: 45px;
            margin-bottom: 45px;">> Cataloging (Add Items)</h1>
    <form>
        @* BORDER *@
        <div class="border" style="
            border: 3px solid; border-radius: 15px;
            padding: 20px;
            box-shadow: 10px 10px 30px rgba(14, 14, 14, 0.2);
            border-color: #f5f5f5;
            background-color: rgba(255, 255, 255);
            margin-left: 45px;
            margin-right: 45px">

            <div class="row px-5">
                <h1 class="py-3">Add Items</h1>
                <div class="py-3">

                    <div class="row mb-4">
                        <label for="firstAuthorInput" class="form-label"><strong>952 - Holding Information</strong></label>

                        <label for="firstAuthorInput" class="form-label pt-1" style="font-size: smaller;">952-a. Home Library</label>
                        <input type="text" class="form-control mx-auto" style="width: 1010px" id="firstAuthor" value="">

                        <label for="firstAuthorInput" class="form-label pt-1" style="font-size: smaller;">952-b. Current Library</label>
                        <input type="text" class="form-control mx-auto" style="width: 1010px" id="firstAuthor" value="">

                        <label for="firstAuthorInput" class="form-label pt-1" style="font-size: smaller;">952-c. Shelving Location</label>
                        <input type="text" class="form-control mx-auto" style="width: 1010px" id="firstAuthor" value="">

                        <label for="firstAuthorInput" class="form-label pt-1" style="font-size: smaller;">952-o. Full call number</label>
                        <input type="text" class="form-control mx-auto" style="width: 1010px" id="firstAuthor" value="">

                        <label for="firstAuthorInput" class="form-label pt-1" style="font-size: smaller;">952-p. Accession number</label>
                        <input type="text" class="form-control mx-auto" style="width: 1010px" id="firstAuthor" value="">

                        <label for="firstAuthorInput" class="form-label pt-1" style="font-size: smaller;">952-t. Copy number</label>
                        <input type="text" class="form-control mx-auto" style="width: 1010px" id="firstAuthor" value="">

                        <label for="firstAuthorInput" class="form-label pt-1" style="font-size: smaller;">952-y. Koha item type</label>
                        <input type="text" class="form-control mx-auto" style="width: 1010px" id="firstAuthor" value="">
                    </div>
                </div>
            </div>
        </div>

        @* BUTTON *@
        <div class="py-5 mx-5 float-end">
            <button type="submit" class="btn btn-primary" style="background-color: #383841;">Add Items</button>
        </div>
    </form>
