@{
    ViewData["Title"] = "Home Page";
}

<div class="container-md justify-content-center text-center">
    <!-- we gotta think of a catchier line -->
    <h1 class="display-4 top-padding-space-7 poppins" style="font-weight:bold;">Submit your projects easily</h1>
    <!-- explain below what ramsdoc is -->
    <p class="pt-4">RAMS-Doc (formerly APC Project Repository) aims to make your project document submission faster and
        easier.</p>
    <div class="top-padding-space-5">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <button type="button" class="btn btn-upload btn-lg bebas-neue" style="letter-spacing: 3px; background-color: #383841">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle"
                    viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                    <path
                        d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                </svg>
                <a class="text-light" asp-area="" asp-controller="Home" asp-action="AddProject">Submit a project
                </a></button>
        }
        else
        {
            <button type="button" class="btn btn-secondary btn-lg bebas-neue" style="letter-spacing: 3px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-microsoft"
                    viewBox="0 0 16 16">
                    <path d="M7.462 0H0v7.19h7.462zM16 0H8.538v7.19H16zM7.462 8.211H0V16h7.462zm8.538 0H8.538V16H16z" />
                </svg> Sign in with Microsoft </button>
        }

    </div>
</div>

