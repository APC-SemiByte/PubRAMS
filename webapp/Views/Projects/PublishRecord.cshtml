            <input type="text" asp-for="LinkText" class="form-control" />
            <span asp-validation-for="LinkText" class="text-danger"></span>
        </div>

        <div>
            <h3>942 - Added entry elements</h3>
            <label asp-for="ItemType" class="control-label"></label>
            <input type="text" asp-for="ItemType" class="form-control" />
            <span asp-validation-for="ItemType" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-primary" value="Add Record"/>
    </form>
</div>
