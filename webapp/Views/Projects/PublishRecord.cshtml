            <span asp-validation-for="PublishPlace" class="text-danger"></span>

            <label asp-for="Publisher" class="control-label"></label>
            <input type="text" asp-for="Publisher" class="form-control" />
            <span asp-validation-for="Publisher" class="text-danger"></span>

            <label asp-for="Date" class="control-label"></label>
            <input type="text" asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div>
            <h3>520 - Summary</h3>
            <label asp-for="Summary" class="control-label"></label>
            <input type="text" asp-for="Summary" class="form-control" />
            <span asp-validation-for="Summary" class="text-danger"></span>
        </div>

        <div>
            <h3>650 - Subject added access point - topical term</h3>
