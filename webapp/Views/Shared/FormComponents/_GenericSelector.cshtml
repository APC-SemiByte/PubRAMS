@model webapp.Models.ViewModels.OptionsViewModel;

@if (Model.Options.Count < 1)
{
    <!option>No eligible @($"{ViewData["OptionName"]}s")</!option>
}
else
{
    <!option @(ViewData["SelectedOption"] as string == null ? "selected" : "")>Select @(ViewData["OptionName"])...</!option>
    @foreach (var option in Model.Options)
    {
        <!option value="@option"
            @(ViewData["SelectedOption"] as string == option ? "selected" : "")
        >@option</!option>
    }
}
