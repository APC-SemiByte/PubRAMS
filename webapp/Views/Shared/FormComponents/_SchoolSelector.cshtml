@model webapp.Models.ViewModels.SchoolListViewModel;
    <!option>Select school...</!option>
@foreach (var school in Model.Schools)
{
    <!option value="@school"
        hx-get="/Form/SchoolRelated"
        hx-trigger="click"
        hx-target="this"
        hx-swap="none"
        hx-include="closest select"
        hx-select-oob="#course-selector, #subject-selector"
    >
        @school
    </!option>
}
