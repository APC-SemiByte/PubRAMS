@model webapp.Models.ViewModels.SchoolListViewModel;
    <!option @(ViewData["SelectedSchool"] as string == null ? "selected" : "")>Select school...</!option>
@foreach (var school in Model.Schools)
{
    <!option value="@school"
        hx-get="/Form/SchoolRelated"
        hx-trigger="click"
        hx-target="this"
        hx-swap="none"
        hx-include="closest select"
        hx-select-oob="#course-selector, #subject-selector"
        @(ViewData["SelectedSchool"] as string == school ? "selected" : "")
    >
        @school
    </!option>
}
